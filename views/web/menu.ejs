<div style="width: 100%; height: 15rem"></div>

<!-- ======= Menu Section ======= -->
<section id="menu" class="menu section-bg">
  <div class="container" data-aos="fade-up">
    <div class="section-title">
      <h2>Menu</h2>
      <p>Check Our Tasty Menu</p>
    </div>

    <div class="row" data-aos="fade-up" data-aos-delay="100">
      <div class="col-lg-12 d-flex justify-content-center">
        <ul id="menu-flters">
          <li data-filter="*" class="filter-active">All</li>
          <li data-filter=".filter-starters">Starters</li>
          <li data-filter=".filter-salads">Salads</li>
          <li data-filter=".filter-specialty">Specialty</li>
        </ul>
      </div>
    </div>
    <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
      <% for(const food of foods){ %>
      <div class="col-lg-6 menu-item filter-specialty">
        <img
          src="/web/assets/img/menu/<%= food.image %>.jpg"
          class="menu-img"
          style="height: 10rem; width: 10rem; margin-right: 0.5rem"
          alt=""
        />
        <div class="menu-content" style="margin-top: 1rem">
          <a href="/menu/<%= food.id %>"><%= food.name %></a
          ><span><%= food.price %></span>
        </div>
        <div class="menu-ingredients">
          <%=food.description%>
          <span><a href="/order">ORDER NOW</a></span>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
<!-- End Menu Section -->
